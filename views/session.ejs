<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
 
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
   

   body {
    font-family: 'Arial', sans-serif;
    font-size: 16px;
  }
  
  .container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Montserrat', sans-serif;
    font-weight: bold;
  }
  
  p {
    font-size: 18px;
    line-height: 1.5;
    margin-bottom: 20px;
  }
  
  ul {
    margin-bottom: 20px;
  }
  
  li {
    font-size: 16px;
    line-height: 1.5;
    margin-bottom: 10px;
  }
  
  a {
    color: #555;
    text-decoration: none;
    font-size: 16px;
    font-weight: bold;
    padding: 10px 20px;
    border-radius: 5px;
    transition: background-color 0.2s ease;
  }
  
  a:hover {
    background-color: #555;
    color: #fff;
  }
  
  .bg-purple {
    background-color: #8B5CF6;
  }
  
  .bg-red {
    background-color: #EF4444;
  }
  
  .bg-green {
    background-color: #10B981;
  }
  
  .text-purple {
    color: #8B5CF6;
  }
  
  .text-red {
    color: #EF4444;
  }
  
  .text-green {
    color: #10B981;
  }




    .player-item:hover .trashicon {
      display: block;
    }
  </style>
  <script>
    function makeRequest(url, method, headers, body) {
  return fetch(url, {
    method: method,
    headers: headers,
    body: JSON.stringify(body),
  })
  .then(response => response.json())
  .catch(error => console.error(`Error: ${error}`));
}

function joinSession(id) {
  makeRequest('/join-session', 'POST', {'Content-Type': 'application/json'}, {sessionId: id})
    .then(() => window.location.reload());
}

function leaveSession(id) {
  makeRequest('/leave-session', 'DELETE', {'Content-Type': 'application/json'}, {sessionId: id})
    .then(() => window.location.reload());
}



function deletePlayer(id, sessionId) {
  makeRequest('/delete-player', 'DELETE', {'Content-Type': 'application/json'}, {id: id, sessionId: sessionId})
    .then(() => window.location.reload());
}

  </script> 

</head>

<body class="flex flex-col justify-center items-center min-h-screen">

  <nav class="py-4 px-8 bg-purple-500 text-white w-full fixed top-0">
    <ul class="flex justify-between items-center">
      <li>
        <a href="/home" class="font-bold text-lg">Home</a>
      </li>
      <li>
        <a href="/sport/<%=sessionDetails.sportId%>" class="font-bold text-lg"> <%= sport %> </a>
      </li>
      <li>
        <span class="font-bold text-lg">Session #<%= sessionId %></span>
      </li>
      <li>
        <a href="/sport/<%=sessionDetails.sportId%>" class="font-bold text-lg">Back</a>
      </li>
      
    </ul>
  </nav>



  <div class="m-20 container w-full max-w-lg p-4 bg-white rounded shadow">
    <h1 class="text-4xl font-bold mb-4 text-purple"><%= sport %> Session #<%= sessionId %></h1>
    <p class="text-lg mb-2">This session is scheduled for <%= date %></p>
    <p class="text-lg mb-4">at <%= venue %></p>

    <ul>
      <% for (var i=0; i <players.length ; i++) { %>
        <li class="flex items-center justify-between mb-2">
          <p class="text-lg text-gray-600 cursor-pointer"><%= players[i].playername %> 

            <% if ( sessionDetails.creatorID === players[i].userId ) { %>
              <span class="ml-auto">*organizer</span>
            <% } %>

            
            
          </p>
    
          <% if (organizer && sessionDetails.creatorID != players[i].userId  && !sessionDetails.isCanceled && !previouSession  ) { %>
            <a onclick="deletePlayer(<%= players[i].id %>,<%= sessionId %>)" href="" class="p-1 rounded trashicon">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
              </svg>
            </a>
          <% } %>
        </li>
      <% } %>
    </ul>
  </div> 

  <% if (sessionDetails.isCanceled) { %>

    <div class="flex flex-col mt-4">
      <p class="text-red-500 font-bold">The session has been canceled:</p>
      <div class="flex justify-center items-center my-4 px-4 py-2 rounded hover:bg-purple-50">
        <span class="text-center">
          <%= sessionDetails.reason %>
        </span>
      </div>
    </div>

    <% } else { %>

      <% if (previouSession) { %>

        <p class="text-red-500 font-bold">The session has been completed</p>

        <% } else { %>

      <% if (organizer) { %>
        <div class="flex flex-col space-y-2 mt-4">
          <a href="/edit-session/<%=sessionId%>" class="bg-purple-500 text-white py-2 px-4 rounded hover:bg-purple-600">Edit Session</a>
          <a href="/cancelsessionpage/<%= sessionId %>"  class="bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600">Cancel Session</a>
        </div>
      <% } else if (joined) { %>
        <a href="#" onclick="leaveSession(<%= sessionId %>)" class="bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600 mt-4">Leave Session</a>
      <% } else if (count > 0) { %>
        <a href="#" onclick="joinSession(<%= sessionId %>)"class="bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600 mt-4">Join Session</a>
      
         
          <% } else { %>
            <p>No available spots</p>
            <% } %>

      <% } %>
      <% } %>
    
</body>

</html>